<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>100 Must Read Books</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#16A085">
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
    <div id="main">
      <div class="top">
        <h1>100 Must Read Books</h1>

        <label class="toggle-read">
          <input type="checkbox" id="show-unread-only" />Only show unread books
        </label>
      </div>

      <ul class="books" id="books">
        <% books.forEach(function(book) { %>
        <li class="book" id="book-<%= book.id %>">
          <input type="checkbox" aria-label="Have you read this book?" title="Have you read this book?" />
          <img class="book__image" src="<%= book.cover %>" alt="Book cover for <%= book.title %>" />
          <div class="book__info">
            <h2 class="book__title"><%= book.title %></h2>
            <p class="book__author">By <%= book.author %></p>
            <div class="book__description"><%= book.description %></div>
          </div>
        </li>
        <% }); %>
      </ul>
    </div>

    <script src="js/app.js"></script>
  </body>
</html>
