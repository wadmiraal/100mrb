<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>100 Must Read Books</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#16A085">
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
    <div id="main">
      <h1>100 Must Read Books</h1>

      <ul class="books">
        <% books.forEach(function(book) { %>
        <li class="book" id="book-<%= book.id %>">
          <input type="checkbox" aria-label="Have you read this book?" title="Have you read this book?" />
          <h2><%= book.title %></h2>
          <div class="book__description"><%= book.description %></div>
          Rating...
        </li>
        <% }); %>
      </ul>
    </div>

    <script src="js/app.js"></script>
  </body>
</html>
